// Place your settings in this file to overwrite default and user settings.
{
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript",
        {
            "language": "typescript",
            "autoFix": true
        }
    ],
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "[typescript]": {
        "editor.formatOnSave": false
    },
    "[markdown]": {
        "editor.formatOnSave": false
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true,
        "**/coverage": true
    },
    "typescript.referencesCodeLens.enabled": true,
    "appService.zipIgnorePattern": [
        ".vscode{,/**}"
    ],
    "appService.deploySubpath": "",
    "cSpell.words": [
        "bowden",
        "camelcase",
        "deserialize",
        "fbgraph",
        "gravatar",
        "hackathon",
        "interop",
        "kolkata",
        "mlab",
        "mongodb",
        "reqs",
        "resave",
        "sameorigin",
        "sendgrid",
        "signup",
        "xframe"
    ]
}
